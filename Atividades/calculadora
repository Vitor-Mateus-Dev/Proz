def calculadora(num1, num2, operacao):
    if operacao == 1:
        resultado = num1 + num2
    elif operacao == 2:
        resultado = num1 - num2
    elif operacao == 3:
        resultado = num1 * num2
    elif operacao == 4:
        resultado = num1 / num2
    else:
        resultado = 0
        print("Insira 1 para +, 2 para -, 3 para *, e 4 para /.")
    return resultado